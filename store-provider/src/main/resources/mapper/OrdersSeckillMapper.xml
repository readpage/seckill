<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrdersSeckillMapper">
    <delete id="deleteByGsId" parameterType="Integer">
        DELETE FROM orders_seckill WHERE gsId=#{gsId}
    </delete>
    <delete id="deleteBatchByGsId" parameterType="List">
        DELETE FROM orders_seckill WHERE gsId IN
        <foreach collection="list" item="gsId" open="(" separator="," close=")">
            #{gsId}
        </foreach>
    </delete>
    <delete id="deleteByOid" parameterType="Integer">
        DELETE FROM orders_seckill WHERE oid=#{oid}
    </delete>
    <delete id="deleteBatchByOid" parameterType="List">
        DELETE FROM orders_seckill WHERE oid IN
        <foreach collection="list" item="oid" open="(" separator="," close=")">
            #{oid}
        </foreach>
    </delete>
    <select id="selectAll" resultType="OrdersInfo">
        SELECT u.username, o.number, o.create_date, g.name, gs.price, g.img, g.store
        FROM user u, orders o, goods g, orders_goods og, goods_seckill gs
        WHERE u.id=o.uid AND o.id=og.oid AND g.id=gs.gid
        GROUP BY gs.id
    </select>
</mapper>
